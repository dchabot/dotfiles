###SSH Port Forwarding Configuration###

####Global Configuration Options###

#Host * will apply to all hosts
Host *
	#Note default is 3
    ServerAliveCountMax 4
    #Note default is 0
    ServerAliveInterval 15      
    AddKeysToAgent yes
    IdentityFile ~/.ssh/id_rsa_xps

Host *.slac.stanford.edu
    User dchabot
    ForwardAgent yes
    GSSAPIAuthentication yes
    GSSAPIDelegateCredentials yes

####Port Forwarding Directives###
Host rhel6-64
    HostName rhel6-64.slac.stanford.edu
    User dchabot
    ForwardAgent yes

Host centos7
    HostName centos7.slac.stanford.edu
    User dchabot
    ForwardAgent yes

Host dev3
    HostName lcls-dev3.slac.stanford.edu
    #KexAlgorithms +diffie-hellman-group1-sha1
    #ProxyCommand ssh -qY rhel6-64 -W %h:%p
    ProxyJump centos7
    User dchabot
    ForwardAgent yes
    #LocalForward 10001 localhost:4000

Host mcclogin
    HostName mcclogin.slac.stanford.edu
    #ProxyCommand ssh -qY rhel6-64 -W %h:%p
    ProxyJump centos7
    User dchabot
    ForwardAgent yes
    #LocalForward 10001 localhost:4000

Host ldap-test
    HostName ldap-test.slac.stanford.edu
    #ProxyCommand ssh -qY rhel6-64 -W %h:%p
    ProxyJump mcclogin
    User dchabot
    ForwardAgent yes
    #LocalForward 10001 localhost:4000
