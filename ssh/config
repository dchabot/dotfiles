###SSH Port Forwarding Configuration###

####Global Configuration Options###

#Host * will apply to all hosts
Host *
	  #Note default is 3
    ServerAliveCountMax 4
		#Note default is 0       
    ServerAliveInterval 15      
    User chabot
    IdentityFile ~/.ssh/id_rsa_imak

####Port Forwarding Directives###

### Note: "ssh" will cause DNS lookups to "ssh.bnl.gov" or "ssh.sec.bnl.local", depending on interface
# Obviously, does not apply for msu access
Host gw1
    HostName nsclgw1.nscl.msu.edu

Host ctsgw
    HostName ctsgw.frib.msu.edu
    ForwardAgent yes
    ProxyCommand ssh -qY gw1 -W %h:%p
    LocalForward 10001 localhost:4000

Host stdioc
    HostName stdioc.cts
    ForwardAgent yes
    ProxyCommand ssh -qY ctsgw -W %h:%p
    LocalForward 10002 localhost:4000

Host stdioclog
    HostName stdioclog.cts
    ForwardAgent yes
    ProxyCommand ssh -qY ctsgw -W %h:%p
    LocalForward 10003 localhost:4000

Host fe-isrc1-ioc
    HostName fe-isrc1-ioc.cts
    ForwardAgent yes
    ProxyCommand ssh -qY ctsgw -W %h:%p
    LocalForward 10004 localhost:4000

Host chabot
    HostName chabot.cts
    ForwardAgent yes
    ProxyCommand ssh -qY ctsgw -W %h:%p
    LocalForward 10005 localhost:4000

Host dev2
    HostName dev02-hlc.nscl.msu.edu
    ForwardAgent yes
    ProxyCommand ssh -qY gw1 -W %h:%p
    LocalForward 10201 localhost:4000

Host nscl-deb
    HostName nsclgw1.nscl.msu.edu
    ForwardAgent yes
    LocalForward localhost:10202 nsclmirror.nscl.msu.edu:80

Host cts-deb
    HostName nsclgw1.nscl.msu.edu
    ForwardAgent yes
    LocalForward localhost:10203 apt.hlc.nscl.msu.edu:80

Host ci-deb
    HostName nsclgw1.nscl.msu.edu
    ForwardAgent yes
    LocalForward localhost:10204 ci.frib.msu.edu:443

Host jenkins4
    HostName nsclgw1.nscl.msu.edu
    ForwardAgent yes
    LocalForward localhost:10205 jenkins4.nscl.msu.edu:80
