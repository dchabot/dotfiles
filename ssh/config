###SSH Port Forwarding Configuration###

####Global Configuration Options###

#Host * will apply to all hosts
Host *
	#Note default is 3
    ServerAliveCountMax 4
    #Note default is 0
    ServerAliveInterval 15      
    AddKeysToAgent yes
    IdentityFile ~/.ssh/id_rsa_mbp

Host *.slac.stanford.edu
    User dchabot
    ForwardAgent yes
    GSSAPIAuthentication yes
    GSSAPIDelegateCredentials yes

####Port Forwarding Directives###
Host rhel6-64
    HostName rhel6-64.slac.stanford.edu
    User dchabot
    ForwardAgent yes
    GSSAPIAuthentication yes
    GSSAPIDelegateCredentials yes

Host dev3
    HostName lcls-dev3.slac.stanford.edu
#    ProxyCommand ssh -qY rhel6-64 -W %h:%p
    ProxyJump rhel6-64
    User dchabot
    ForwardAgent yes
    GSSAPIAuthentication yes
    GSSAPIDelegateCredentials yes
    #LocalForward localhost:10001 localhost:5064

Host prod_gw
    HostName rhel6-64.slac.stanford.edu
    User dchabot
    ForwardAgent yes
    GSSAPIAuthentication yes
    GSSAPIDelegateCredentials yes
    LocalForward localhost:24742 lcls-prod01.slac.stanford.edu:5068

Host dev5
    HostName lcls-dev5.slac.stanford.edu
    ProxyCommand ssh -qY rhel6-64 -W %h:%p
    User dchabot
    ForwardAgent yes
    GSSAPIAuthentication yes
    GSSAPIDelegateCredentials yes
    #LocalForward 10002 localhost:4000

Host mcclogin
    HostName mcclogin.slac.stanford.edu
#    ProxyCommand ssh -qY rhel6-64 -W %h:%p
    ProxyJump rhel6-64
    User dchabot
    ForwardAgent yes
    GSSAPIAuthentication yes
    GSSAPIDelegateCredentials yes
    #LocalForward 10003 localhost:4000

Host srv01
    HostName lcls-srv01.slac.stanford.edu
    ProxyCommand ssh -qY mcclogin -W %h:%p
    User dchabot
    ForwardAgent yes
    GSSAPIAuthentication yes
    GSSAPIDelegateCredentials yes
    #LocalForward 10004 localhost:4000

Host srv05
    HostName lcls-srv05.slac.stanford.edu
    ProxyCommand ssh -qY mcclogin -W %h:%p
    User dchabot
    ForwardAgent yes
    GSSAPIAuthentication yes
    GSSAPIDelegateCredentials yes
    #LocalForward 10004 localhost:4000

Host ldap-test
    HostName ldap-test.slac.stanford.edu
#    ProxyCommand ssh -qY mcclogin -W %h:%p
    ProxyJump mcclogin
